<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet">
    
</head>
<body class="bg-green-100">
    <div class="flex justify-center items-center min-h-screen">
        <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
            <%- include('header.ejs') %>
            <h6 class="text-center text-xl font-bold py-4">Welcome <%= user.firstName %></h6>
            <p class="text-center">The following sports are available. Please select one:</p>
            <ul class="my-4">
                <% sports.forEach(function(sport) { %>
                    <li><a href="/sport/<%= sport.id %>" class="text-green-600 hover:underline"><%= sport.name %></a></li>
                <% }); %>
            </ul>
            <p class="text-center">Create a new session:</p>
            <form action="/create-session" method="post" class="my-4">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-4">
                    <label for="sportName" class="text-gray-700 font-medium">Sport:</label>
                    <input type="text" name="sportName" class="border border-gray-300 text-gray-900 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <div class="mb-4">
                    <label for="sessionDateTime" class="text-gray-700 font-medium">Date and Time:</label>
                    <input type="datetime-local" name="sessionDateTime" class="border border-gray-300 text-gray-900 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <div class="mb-4">
                    <label for="sessionVenue" class="text-gray-700 font-medium">Venue:</label>
                    <input type="text" name="sessionVenue" class="border border-gray-300 text-gray-900 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <div class="mb-4">
                    <label for="sessionParticipants" class="text-gray-700 font-medium">Participants:</label>
                    <input type="text" name="sessionParticipants" class="border border-gray-300 text-gray-900 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <div class="mb-4">
                    <label for="playersNeeded" class="text-gray-700 font-medium">Players Needed:</label>
                    <input type="number" name="playersNeeded" class="border border-gray-300 text-gray-900 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <button type="submit" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Create Session</button>
            </form>
            <a href="/logout" class="text-center block underline text-sm">Sign Out</a>
            <%- include("Flash.ejs") %>
        </div>
    </div>
</body>
</html>
